{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["react-native"],
    "lib": ["ES2019", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/node_modules/**",
    "android/**",
    "ios/**",
    "lib/**",
    "__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "App.tsx",
    "index.js"
  ]
}
